<body>
  <h1>üèÜ Campeonato Handebol Team 2</h1>

  <div class="card">
    <h2>üìä Tabela</h2>
    <table id="times">
      <tr><th>Time</th><th>Pontos</th></tr>
      <tr><td>Handeboll Kids</td><td>3</td></tr>
    </table>
    <input type="text" id="nomeTime" placeholder="Nome do time">
    <input type="number" id="pontosTime" placeholder="Pontos">
    <button onclick="addTime()">Adicionar Time</button>
  </div>

  <div class="card">
    <h2>‚ö° Artilharia</h2>
    <table id="artilharia">
      <tr><th>Jogador</th><th>Gols</th></tr>
      <tr><td>Pedro</td><td>5</td></tr>
    </table>
    <input type="text" id="nomeJogador" placeholder="Nome do jogador">
    <input type="number" id="golsJogador" placeholder="Gols">
    <button onclick="addJogador()">Adicionar Jogador</button>
  </div>

<script>
  function addTime(){
    let nome = document.getElementById("nomeTime").value;
    let pontos = document.getElementById("pontosTime").value;
    if(nome && pontos){
      let tabela = document.getElementById("times");
      let row = tabela.insertRow();
      row.insertCell(0).innerHTML = nome;
      row.insertCell(1).innerHTML = pontos;
    }
  }

  function addJogador(){
    let nome = document.getElementById("nomeJogador").value;
    let gols = document.getElementById("golsJogador").value;
    if(nome && gols){
      let tabela = document.getElementById("artilharia");
      let row = tabela.insertRow();
      row.insertCell(0).innerHTML = nome;
      row.insertCell(1).innerHTML = gols;
    }
  }
</script>
